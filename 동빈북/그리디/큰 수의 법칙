import sys
input = sys.stdin.readline

n, m, k = map(int, input().split())
num = list(map(int, input().split()))
sum = 0
cnt = 0

num.sort(reverse=True)

while 1:
    sum += num[0]
    cnt += 1
    m -= 1

    if cnt == k:
        sum += num[1]
        cnt = 0
        m -= 1

    if m == 0:
        break

print(sum)

