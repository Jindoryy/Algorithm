# 큐로 푼 경우

from collections import deque

def solution(prices):
    
    queue = deque(prices)
    answer = []
    
    while queue:
        price = queue.popleft()
        second = 0
        
        for q in queue:
            second += 1 # 계속 시간을 세준다
            if price > q: # 가격이 떨어진 경우
                break
        answer.append(second)
        
    return answer

# 완전탐색으로 푼 경우

def solution(prices):
    
    answer = [0 for a in range(len(prices))]
    
    for i in range(len(prices)):
        for j  in range(i+1, len(prices)):
            answer[i] += 1
            if prices[i] > prices[j]:
                break
        
    return answer
