n = int(input())
grade = list(map(int, input().split()))
avg = round(sum(grade)/n)
min = float('inf')

for idx, score in enumerate(grade):
    if abs(score - avg) < min:
        min = abs(score - avg)
        x = idx + 1
        y = score

    elif  abs(score - avg) == min:
        if score > y:
            x = idx + 1
            y = score

print(avg, x)

# 논리적으로 계속 흐름 따라 가야함...
# enumerate에 대한 문법도 확인
